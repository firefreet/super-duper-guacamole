<div class="columns is-centered">
    <div class="column is-11">
        <br>
        <!-- Main container -->
        <nav class="level">
            <!-- Left side -->
            <div class="level-left">
                <div class="level-item">
                    <div class="field has-addons">
                        <p class="control">
                            <input class="input" type="text" placeholder="Create your dream burger">
                        </p>
                        <p class="control">
                            <button class="button">
                                Cook it up!
                            </button>
                        </p>
                    </div>
                </div>
            </div>
            <!-- Right side -->
            <div class="level-right">
                <div class="level-item">
                    <p class="subtitle is-5">
                        <strong>{{burgers.length}}</strong> burgers and counting...
                    </p>
                </div>
            </div>
        </nav>
        <div class="columns">
            <div class="column is-4">
                <h1 class="title">
                    Burger
                </h1>
                <p class="subtitle">
                    Heaven
                </p>
            </div>
            <div class="column">
                <figure class="image is-3by2"><img src="assets/images/veggie.jpg" alt="veggie"></figure>
            </div>
        </div>
        <div class="columns is-vcentered">
            <div class="column is-6 has-text-centered-mobile">
                <h1>Ready for you to swallow whole...
                    <i class="far fa-grin-beam-sweat"></i>
                </h1>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/uneaten }}
                    {{/unless}}
                {{/each}}
            </div>
        <div class="column is-6 has-text-right-tablet has-text-centered-mobile">
            <h1>Done and gone. Too bad. So sad...
                <i class="far fa-sad-tear"></i>
            </h1>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/eaten }}
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>